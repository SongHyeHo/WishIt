<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data2_tv1"
        android:textSize="30dp"
        android:fontFamily="@font/hansansbold"
        android:textColor="@color/t_orange"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/uline"
        android:layout_width="55dp"
        android:layout_height="4dp"
        android:background="@color/orange"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data1_tv2"
        android:textSize="30dp"
        android:fontFamily="@font/hansansregular"
        android:textColor="@color/t_black"
        android:layout_below="@+id/uline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp" />
    <!--______________________________________________________________________-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hansanslight"
            android:text="나는  "
            android:textColor="@color/t_black"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <!-- 월 -->
            <ToggleButton
                android:id="@+id/togbtnMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="gravity"
                android:textColor="@color/gray"
                android:textOff="월"
                android:textOn="월"
                android:fontFamily="@font/robotolight"
                android:textSize="25dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <!-- 화 -->
            <ToggleButton
                android:id="@+id/togbtnTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="gravity"
                android:textColor="@color/gray"
                android:textOff="화"
                android:textOn="화"
                android:fontFamily="@font/robotolight"
                android:textSize="25dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="5dp"/>

            <!-- 수 -->
            <ToggleButton
                android:id="@+id/togbtnWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="gravity"
                android:textColor="@color/gray"
                android:textOff="수"
                android:textOn="수"
                android:fontFamily="@font/robotolight"
                android:textSize="25dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="5dp"/>

            <!-- 목 -->
            <ToggleButton
                android:id="@+id/togbtnThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="gravity"
                android:textColor="@color/gray"
                android:textOff="목"
                android:textOn="목"
                android:fontFamily="@font/robotolight"
                android:textSize="25dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="5dp"/>

            <!-- 금 -->
            <ToggleButton
                android:id="@+id/togbtnFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="gravity"
                android:textColor="@color/gray"
                android:textOff="금"
                android:textOn="금"
                android:fontFamily="@font/robotolight"
                android:textSize="25dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="5dp"/>

            <!-- 토 -->
            <ToggleButton
                android:id="@+id/togbtnSat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="gravity"
                android:textColor="@color/gray"
                android:textOff="토"
                android:textOn="토"
                android:fontFamily="@font/robotolight"
                android:textSize="25dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="5dp"/>

            <!-- 일 -->
            <ToggleButton
                android:id="@+id/togbtnSun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                style="?android:attr/borderlessButtonStyle"
                android:textAlignment="gravity"
                android:textColor="@color/gray"
                android:textOff="일"
                android:textOn="일"
                android:fontFamily="@font/robotolight"
                android:textSize="25dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hansanslight"
            android:text="요일에 일한다."
            android:textColor="@color/t_black"
            android:textSize="30dp" />

    </LinearLayout>
    <!--______________________________________________________________________-->

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/data_btnNext"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/hansansbold"
        android:textColor="@color/t_white"
        android:textSize="17dp"
        android:background="@drawable/radius_button" />

</RelativeLayout>