<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- off -->
    <item
        android:state_checked="false">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/gray" />

            <size
                android:width="40dp"
                android:height="40dp" />
            <padding
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp" />
        </shape>

    </item>

    <!-- on -->
    <item
        android:state_checked="true">
        <shape android:shape="oval">
            <solid
                android:color="@color/orange" />
            <size
                android:width="40dp"
                android:height="40dp" />
            <padding
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp" />
        </shape>

    </item>
</selector>